<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/headerMargin"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:gravity="center"
                    android:src="@mipmap/ic_view_list_black_24dp"
                    android:padding="@dimen/headerMargin"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin"
                    android:textColor="#000000"
                    android:textSize="@dimen/subheading2"
                    android:text="Tasks"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/headerMargin"
                android:paddingRight="@dimen/headerMargin"
                android:paddingBottom="@dimen/headerMargin"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:gravity="center"
                    android:src="@mipmap/ic_watch_later_black_24dp"
                    android:padding="@dimen/headerMargin"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin"
                    android:textColor="#000000"
                    android:textSize="@dimen/subheading2"
                    android:text="Postponed Tasks"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/headerMargin"
                android:paddingRight="@dimen/headerMargin"
                android:paddingBottom="@dimen/headerMargin"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:gravity="center"
                    android:src="@mipmap/ic_check_black_24dp"
                    android:padding="@dimen/headerMargin"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin"
                    android:textColor="#000000"
                    android:textSize="@dimen/subheading2"
                    android:text="Finished Tasks"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/headerMargin"
                android:paddingRight="@dimen/headerMargin"
                android:paddingBottom="@dimen/headerMargin"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:gravity="center"
                    android:src="@mipmap/ic_account_box_black_24dp"
                    android:padding="@dimen/headerMargin"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin"
                    android:textColor="#000000"
                    android:textSize="@dimen/subheading2"
                    android:text="Account Settings"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/headerMargin"
                android:paddingRight="@dimen/headerMargin"
                android:paddingBottom="@dimen/headerMargin"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:gravity="center"
                    android:src="@mipmap/ic_exit_to_app_black_24dp"
                    android:padding="@dimen/headerMargin"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin"
                    android:textColor="#000000"
                    android:textSize="@dimen/subheading2"
                    android:text="Logout"/>
            </LinearLayout>

        </LinearLayout>

</LinearLayout>